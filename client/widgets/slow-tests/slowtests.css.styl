.slowtests-widget .axis path,
.slowtests-widget .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.slowtests-widget .x.axis path, .slowtests-widget .title-category path, .slowtests-widget .title-category .tick
  display none

.slowtests-widget .avg, .slowtests-widget .median, .slowtests-widget .regression
  fill none
  stroke-width 2px

.slowtests-widget
  rect
    &.bar
      opacity 0.7
  .bar
    &:hover
      fill #17becf

.d3-tip
  line-height 1
  padding 12px
  background rgba(0, 0, 0, 0.8)
  color #fff
  border-radius 2px
  max-width 250px
  &:after
    box-sizing border-box
    display inline
    font-size 10px
    width 100%
    line-height 1
    color rgba(0, 0, 0, 0.8)
    content "\25BC"
    position absolute
    text-align center
  &.n
    &:after
      margin -1px 0 0 0
      top 100%
      left 0